<h2>Edit Historical Figure</h2>

  <form action="/figures/<%=@figure.id%>"  method="post">
    <input type="hidden" name="_method" value="patch">

    <label>Name:</label>
    <br></br>

    <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">

    <br></br>



  <br></br>

  <label>Choose an existing title:</label>

  <br></br>

  <% @titles.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id %>"<%='checked' if @figure.titles.include?(title) %>><%=title.name%></input>
  <% end %>

  <br></br>

    <label>and/or, create a new title:</label>
    <br></br>
    <label>name:</label>
      <input  type="text" name="title[name]" id="new_title"></input>

    <br></br>

  <label>Choose an existing landmark:</label>

  <% @landmarks.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"<%='checked' if @figure.landmarks.include?(landmark) %>><%=landmark.name%></input>
  <% end %>

  <br></br>

  <label>and/or, create a new landmark:</label>
    <br></br>

    <label>name:</label>
      <input  type="text" name="landmark[name]" id="new_landmark"> </input>
    <label>Year Completed:</label>
      <input  type="text" name="landmark[year_completed]"></input>

      <input type="submit" id="Edit Figure" value="Edit Figure">

  </form>



<a class="button" href="/figures">Figures</a>
